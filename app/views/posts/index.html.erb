<h1>Listing posts</h1>

<% @posts.each do |post| %>
  <h3 class="post_headline">
    <%= post.title %>
  </h3>
  <div class="post_body">
    <%= raw(post.content) %>
  </div>
  <div class="post_footer">
    <%= authorname(post)%> | <%=post.created_at%>
  </div>


  <% if current_user %>
    <%= link_to 'Show', post %>
  <% end %>
  <% if owner(post) %>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %>
  <% end %>

  <br /><br /><br />
<% end %>

<% if current_user %>
  <%= link_to 'New Post', new_post_path %>
<% end %>

