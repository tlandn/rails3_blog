<%= javascript_include_tag :ckeditor %>
<!--
<%= ckeditor_textarea("object", "field", :width => '100%', :height => '200px') %>
-->

<%= form_for(@post) do |f| %>
  <%= render 'errors' %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.cktext_area :content, :toolbar=>'Easy', :width=>'980px', :height=>'200px' %>
    <!--
    <%= f.text_area :content %>
    -->
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
